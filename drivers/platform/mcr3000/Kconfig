#
# MCR3000 Platform Specific Drivers
#

menuconfig MCR3000_PLATFORM_DEVICES
	bool "MCR3000 Platform Specific Device Drivers"
	default y
	---help---
	  Say Y here to get to see options for device drivers for MCR3000
	  platform.
	  This option alone does not add any kernel code.

	  If you say N, all options in this submenu will be skipped and disabled.

if MCR3000_PLATFORM_DEVICES

config FPGA_LOADER
	tristate "FPGA loader"
	depends on GPIOLIB
	depends on SPI
	depends on OF_GPIO
	default y
	---help---
	  Module de chargement du code FPGA. Permet de charger le uCOR FPGA
	  au demarrage

config MCR3000_CPLD
	bool "CPLD ChipSelect SPI"
	depends on GPIOLIB
	depends on OF_GPIO
	default y
	---help---
	  Driver GPIO pour les ChipSelects SPI

config OPX_GPIO
	bool "GPIO driver for OPx PINs on MPC8xx"
	depends on GPIOLIB
	depends on OF_GPIO
	default y
	---help---
	  Driver GPIO pour les Outputs OPx du MPC8xx

endif
